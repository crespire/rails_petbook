<div>
  <h3><%= @user.name %>'s friends</h3>
  <ul>
    <% @user.friends.each do |friend| %>
      <li>
        <% request = @user.find_request(friend) %>
        <%= turbo_frame_tag dom_id(request) do %>
          <%= link_to friend.name, user_path(friend) %>        
          (<%= link_to 'Delete?', request_path(request), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?'} %>)
        <% end %>
      </li>
    <% end %>

  <% if current_user == @user %>
    <p>You can <%= link_to 'delete your account', user_registration(@user), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?'} %>.</p>
  <% end %>
</div>
