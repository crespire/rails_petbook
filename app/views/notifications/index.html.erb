<div class="l-notifications">
  <% if @new.length.zero? %>
    <h3>You're all caught up!</h3>
  <% else %>
    <h3>What's New?</h3>
    <ul>
      <% @new.each do |notification| %>
        <% notification.mark_seen %>
        <li><%= notification.message %></li>
      <% end %>
    </ul>
  <% end %>

  <% if @old.length.zero? %>
    <h3>Nothing to see here...</h3>
  <% else %>
    <h3>Old Notifications</h3>
    <ul>
      <% @old.each do |notification| %>
        <li><%= notification.message %></li>
      <% end %>
    </ul>
  <% end %>
</div>